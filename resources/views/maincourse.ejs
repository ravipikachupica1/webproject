                <h2 class="mb-4 text-lg font-bold"><%= course.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs font-bold"><%= course.quantity %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%= course.price %></span>
                    <button data-course="<%= JSON.stringify(course) %>"
                        class="add-to-cart add-to-cart-course py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>
  
    </div>
  </section>

